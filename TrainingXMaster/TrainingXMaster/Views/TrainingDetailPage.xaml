<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainingXMaster.Views.TrainingDetailPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Back" Clicked="Back_Clicked" />
    </ContentPage.ToolbarItems>
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10" Padding="30">
        
        <Label Text="{Binding name}" FontSize="Large"/>
        <Label Text="{Binding type}" FontSize="Small" />
        <Label Text="{Binding description}" />
        <Button Text="Video" Clicked="PlayVideo_Clicked" CommandParameter="{Binding link}" />
    </StackLayout>
</ContentPage>